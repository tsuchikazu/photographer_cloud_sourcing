<%- model_class = Profile -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @profile.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:organization_type) %>:</strong></dt>
  <dd><%= @profile.organization_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:organization) %>:</strong></dt>
  <dd><%= @profile.organization %></dd>
  <dt><strong><%= model_class.human_attribute_name(:division) %>:</strong></dt>
  <dd><%= @profile.division %></dd>
  <dt><strong><%= model_class.human_attribute_name(:birth) %>:</strong></dt>
  <dd><%= @profile.birth %></dd>
  <dt><strong><%= model_class.human_attribute_name(:zip_code_1) %>:</strong></dt>
  <dd><%= @profile.zip_code_1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:zip_code_2) %>:</strong></dt>
  <dd><%= @profile.zip_code_2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pref) %>:</strong></dt>
  <dd><%= @profile.pref %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address_1) %>:</strong></dt>
  <dd><%= @profile.address_1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address_2) %>:</strong></dt>
  <dd><%= @profile.address_2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @profile.phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mobile_phone) %>:</strong></dt>
  <dd><%= @profile.mobile_phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fax) %>:</strong></dt>
  <dd><%= @profile.fax %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @profile.user_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              profiles_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_profile_path(@profile), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              profile_path(@profile),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
