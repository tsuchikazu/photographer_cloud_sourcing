<%- model_class = JobOffer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:category) %></th>
      <th><%= model_class.human_attribute_name(:budget) %></th>
      <th><%= model_class.human_attribute_name(:detail) %></th>
      <th><%= model_class.human_attribute_name(:expired_on) %></th>
      <th><%= model_class.human_attribute_name(:reqest_on) %></th>
      <th><%= model_class.human_attribute_name(:place) %></th>
      <th><%= model_class.human_attribute_name(:open_code) %></th>
      <th><%= model_class.human_attribute_name(:option) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @job_offers.each do |job_offer| %>
      <tr>
        <td><%= link_to job_offer.id, job_offer_path(job_offer) %></td>
        <td><%= job_offer.title %></td>
        <td><%= job_offer.category %></td>
        <td><%= job_offer.budget %></td>
        <td><%= job_offer.detail %></td>
        <td><%= job_offer.expired_on %></td>
        <td><%= job_offer.reqest_on %></td>
        <td><%= job_offer.place %></td>
        <td><%= job_offer.open_code %></td>
        <td><%= job_offer.option %></td>
        <td><%= job_offer.state %></td>
        <td><%=l job_offer.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_job_offer_path(job_offer), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      job_offer_path(job_offer),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_job_offer_path,
            :class => 'btn btn-primary' %>
